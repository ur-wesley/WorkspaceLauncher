{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-title",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "shell:default",
    "shell:allow-open",
    "shell:allow-spawn",
    "shell:allow-kill",
    "shell:allow-execute",
    "autostart:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-app-write",
    "fs:allow-appdata-write",
    "fs:allow-appdata-read",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "updater:default",
    "updater:allow-check",
    "process:default",
    "process:allow-exit",
    "process:allow-restart",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "x-terminal-emulator",
          "cmd": "x-terminal-emulator",
          "args": true
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA"
        }
      ]
    }
  ]
}