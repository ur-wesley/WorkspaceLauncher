---
import { Image } from 'astro:assets';
import iconImage from '../assets/icon.png';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 border-t border-gray-800 py-12">
  <div class="section-container">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="flex items-center gap-2">
        <Image src={iconImage} alt="WorkspaceLauncher" width={32} height={32} class="w-8 h-8" />
        <span class="text-white font-semibold">WorkspaceLauncher</span>
      </div>
      <div class="flex items-center gap-6 text-gray-400">
        <a
          href="https://github.com/ur-wesley/WorkspaceLauncher"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-white transition-colors"
        >
          GitHub
        </a>
        <span>MIT License</span>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-500">
      <p>&copy; {currentYear} WorkspaceLauncher</p>
    </div>
  </div>
</footer>



